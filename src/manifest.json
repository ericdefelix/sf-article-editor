{
  "manifest_version": 2,
  "name": "Salesforce Knowledge Article Content Block Manager",
  "author": "Eric De Felix",
  "version": "1.0",
  "description": "Inject custom code for CKEDITOR in Salesforce Knowledge Article Edit",
  "page_action": {
    "default_icon": {
      "16" : "images/icon16.png",
      "24" : "images/icon24.png",
      "32" : "images/icon32.png",
      "64" : "images/icon64.png"
    },
    "default_title": "Salesforce Knowledge Article Advanced Editor"
  },
  "background": {
    // "scripts": ["background.html"],
    "page": "background.html",
    "persistent": false
  },
  "permissions": [
    "activeTab",
    "tabs",
    "storage",
    "webNavigation",
    "*://*/*"
  ],
  "web_accessible_resources": [
    "/modules/utils/chromeExtensionUtils.js",
    "webpage.js",
    "editor.js",
    "editor.css"
  ]
}