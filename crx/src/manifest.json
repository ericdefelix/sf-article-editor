{
  "manifest_version": 2,
  "name": "Salesforce Knowledge Article Content Block Manager",
  "author": "Eric De Felix",
  "version": "1.0",
  "minimum_chrome_version": "46",
  "description": "Inject custom code for CKEDITOR in Salesforce Knowledge Article Edit",
  "page_action": {
    "default_icon": {
      "16" : "images/icon16.png",
      "24" : "images/icon24.png",
      "32" : "images/icon32.png",
      "64" : "images/icon64.png"
    },
    "default_title": "Salesforce Knowledge Article Advanced Editor"
  },
  "background": {
    "page": "background.html",
    "persistent": false
  },
  "permissions": [
    "activeTab",
    "tabs",
    "storage",
    "webNavigation",
    "*://*/*",
    "file:///*",
  ],
  "content_security_policy": "script-src 'self' https://cdnjs.cloudflare.com ;object-src 'self'",
  "web_accessible_resources": [
    "https://cdnjs.cloudflare.com/ajax/libs/tinymce/4.9.2/tinymce.min.js",
    "https://cdnjs.cloudflare.com/ajax/libs/tinymce/",
    "/modules/utils/chromeExtensionUtils.js",
    "webpage.js",
    "editor.js",
    "sf-leap-tabs.js",
    "editor-themes-insert.css",
    "editor.css"
  ]
}